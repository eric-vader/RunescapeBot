<SecondWindow>:
    name: 'second'
    Button:
        text: "Give Task"
        size_hint: (.2, .1)
        pos_hint: {'center_x': .2, 'center_y': .7}
        on_release:
            app.root.current = 'third'

    Button:
        text: "\u0394 Login"
        size_hint: (.2, .1)
        pos_hint: {'center_x': .5, 'center_y': .7}
        on_release:
            app.root.current = 'fourth'

    Button:
        text: "kill Bot"
        size_hint: (.2, .1)
        pos_hint: {'center_x': .8, 'center_y': .7}
        on_release:
            root.killBot()
    
    Button:
        text: "Back"
        size_hint: (.1, .1)
        pos_hint: {'center_x': .05, 'center_y': .95}
        on_release:
            app.root.current = "main"

<ThirdWindow>:
    name: 'third' 

    Label:
        text: "Select a task:"
        pos_hint: {'center_x': .25, 'center_y': .95}
        size_hint: (.3, .6)

    Label:
        pos_hint: {'center_x': .25, 'center_y': .6}
        size_hint: (.3, .6)
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height

    Label:
        text: "Selected tasks:"
        pos_hint: {'center_x': .75, 'center_y': .95}
        size_hint: (.3, .6)

    Label:
        pos_hint: {'center_x': .75, 'center_y': .6}
        size_hint: (.3, .6)
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height

    Button:
        text: "Cancel"
        pos_hint: {'center_x': .3, 'center_y': .2}
        size_hint: (.2, .1)
        on_release:
            root.cancelButton()

    Button:
        text: "Confirm"
        pos_hint: {'center_x': .7, 'center_y': .2}
        size_hint: (.2, .1)
        on_release:
            root.confirmButton()

<FourthWindow>:
    name: 'fourth'

    Label:
        text: 'Username:'
        size_hint: (.2, .1)
        pos_hint: {'center_x': .35, 'center_y': .8}

    TextInput:
        id: username
        size_hint: (.2, .1)
        pos_hint: {'center_x': .35, 'center_y': .7}


    Label:
        text: 'Password:'
        size_hint: (.2, .1)
        pos_hint: {'center_x': .65, 'center_y': .8}

    TextInput:
        id: password
        size_hint: (.2, .1)
        pos_hint: {'center_x': .65, 'center_y': .7}

    
    Button:
        text: "Cancel"
        size_hint: (.1, .1)
        pos_hint: {'center_x': .43, 'center_y': .55}
        on_release:
            root.cancelButton()

    Button:
        text: "Confirm"
        size_hint: (.1, .1)
        pos_hint: {'center_x': .57, 'center_y': .55}
        on_release:
            root.confirmButton()

