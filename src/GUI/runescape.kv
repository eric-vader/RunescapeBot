#:kivy 1.11.1
#this is needed in order to run the kivy file it has to be the first thing

#utils is used to be able to use colors from hex value
#:import utils kivy.utils
<MainWindow>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        padding: 2
        ImageArea:
            id: logo
            size_hint: (.3, .3)
            pos_hint: {'center_x': .5, 'center_y': .5}
        BotListArea:
            id: botlist
            size_hint: (.5, .5)
            pos_hint: {'center_x': .5, 'center_y': .5}
        StartBotArea:
            id: start
            size_hint: (.2, .2)
            pos_hint: {'center_x': .5, 'center_y': .5}

<ImageArea@FloatLayout>:
    Image:
        source: 'GUI/Images/runescapeImage.png'
        size_hint: (1, 1)
        pos_hint: {'center_x': .5, 'center_y': .5}
<BotListArea@FloatLayout>:
    ScrollView:
        pos_hint: {'center_x': .5, 'center_y': .5}
        size_hint: (1, 1)
        canvas.before:
            Color:
                rgba: 255, 255, 255, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height

<StartBotArea@FloatLayout>:
    Label:
        id: inputLabel
        text: "Input Display #"
        pos_hint: {'center_x': .25, 'center_y': .65}
        size_hint: (.2, .2)

    TextInput:
        id: botnumInput
        pos_hint: {'center_x': .75, 'center_y': .65}
        size_hint: (.2, .2)
        

    Button:
        text: "Start Bot"
        pos_hint: {'center_x': .5, 'center_y': .35}
        size_hint: (None, None)
        size: self.texture_size
        padding: (dp(5),dp(5))
        on_release:
            app.startBot()

    # Label:
    #     id: success
    #     text: "The bot has successfully started"
