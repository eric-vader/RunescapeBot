#:kivy 1.11.1
#this is needed in order to run the kivy file it has to be the first thing

#utils is used to be able to use colors from hex value
#:import utils kivy.utils


<MainWindow>:
    name: 'main'

    Image:
        source: 'Images/runescapeImage.png'
        size_hint: (.3, .3)
        pos_hint: {'center_x': .5, 'center_y': .9}

    Label:
        pos_hint: {'center_x': .5, 'center_y': .6}
        size_hint: (.7, .3)
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height

    Label:
        text: "Input Display #"
        pos_hint: {'center_x': .3, 'center_y': .2}
        size: (.1, .1)
    
    TextInput:
        id: inputDisplay
        pos_hint: {'center_x': .4, 'center_y': .2}
        size_hint:(.05, .05)

    Button:
        text: "Start Bot"
        size_hint: (.1, .05)
        pos_hint: {'center_x': .6, 'center_y': .2}
        on_release:
            root.startBot()

    Label:
        id: success
        text: "The bot has successfully started"
        visible: False
        opacity: 1 if self.visible else 0
        color: utils.get_color_from_hex('#228B22')
        pos_hint: {'center_x': .5, 'center_y': .1}

    Label:
        id: failure
        text: "The bot ran into an issue consulte with hacker Sam"
        visible: False
        opacity: 1 if self.visible else 0
        color: utils.get_color_from_hex('#FF0000')
        pos_hint: {'center_x': .5, 'center_y': .1}

<SecondWindow>:
    name: 'second'

    Button:
        text: "Give Task"
        size_hint: (.2, .1)
        pos_hint: {'center_x': .2, 'center_y': .7}
        on_release:
            app.root.current = 'third'

    Button:
        text: "\u0394 Login"
        size_hint: (.2, .1)
        pos_hint: {'center_x': .5, 'center_y': .7}
        on_release:
            app.root.current = 'fourth'

    Button:
        text: "kill Bot"
        size_hint: (.2, .1)
        pos_hint: {'center_x': .8, 'center_y': .7}
        on_release:
            root.killBot()
    
    Button:
        text: "Back"
        size_hint: (.1, .1)
        pos_hint: {'center_x': .05, 'center_y': .95}
        on_release:
            app.root.current = "main"

<ThirdWindow>:
    name: 'third' 

    Label:
        text: "Select a task:"
        pos_hint: {'center_x': .25, 'center_y': .95}
        size_hint: (.3, .6)

    Label:
        pos_hint: {'center_x': .25, 'center_y': .6}
        size_hint: (.3, .6)
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height

    Label:
        text: "Selected tasks:"
        pos_hint: {'center_x': .75, 'center_y': .95}
        size_hint: (.3, .6)

    Label:
        pos_hint: {'center_x': .75, 'center_y': .6}
        size_hint: (.3, .6)
        canvas.before:
            Color:
                rgba: .5, .5, .5, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height

    Button:
        text: "Cancel"
        pos_hint: {'center_x': .3, 'center_y': .2}
        size_hint: (.2, .1)
        on_release:
            root.cancelButton()

    Button:
        text: "Confirm"
        pos_hint: {'center_x': .7, 'center_y': .2}
        size_hint: (.2, .1)
        on_release:
            root.confirmButton()

<FourthWindow>:
    name: 'fourth'

    Label:
        text: 'Username:'
        size_hint: (.2, .1)
        pos_hint: {'center_x': .35, 'center_y': .8}

    TextInput:
        id: username
        size_hint: (.2, .1)
        pos_hint: {'center_x': .35, 'center_y': .7}


    Label:
        text: 'Password:'
        size_hint: (.2, .1)
        pos_hint: {'center_x': .65, 'center_y': .8}

    TextInput:
        id: password
        size_hint: (.2, .1)
        pos_hint: {'center_x': .65, 'center_y': .7}

    
    Button:
        text: "Cancel"
        size_hint: (.1, .1)
        pos_hint: {'center_x': .43, 'center_y': .55}
        on_release:
            root.cancelButton()

    Button:
        text: "Confirm"
        size_hint: (.1, .1)
        pos_hint: {'center_x': .57, 'center_y': .55}
        on_release:
            root.confirmButton()

