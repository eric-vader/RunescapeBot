#:kivy 1.11.1
#this is needed in order to run the kivy file it has to be the first thing

#utils is used to be able to use colors from hex value
#:import utils kivy.utils
<MainWindow>:
    name: 'main'
    BoxLayout:
        orientation: 'vertical'
        padding: 2
        ImageArea:
            id: logo
            size_hint: (.3, .3)
            pos_hint: {'center_x': .5, 'center_y': .5}

        BotListArea:
            id: botlist
            size_hint: (.5, .5)
            pos_hint: {'center_x': .5, 'center_y': .5}

        StartBotArea:
            id: start
            size_hint: (.5, .2)
            pos_hint: {'center_x': .5, 'center_y': .5}

<ImageArea@FloatLayout>:
    Image:
        source: 'GUI/Images/runescapeImage.png'
        size_hint: (1, 1)
        pos_hint: {'center_x': .5, 'center_y': .5}

<BotListArea>:
    size_hint: (1,1)
    pos_hint: {'center_x': .5, 'center_y': .5}

<StartBotArea>:
    Label:
        id: inputLabel
        text: "Input Display #"
        pos_hint: {'center_x': .25, 'center_y': .7}
        size_hint: (.25, .3)

    TextInput:
        id: botnumInput
        pos_hint: {'center_x': .75, 'center_y': .7}
        size_hint: (.5, .3)
        

    Button:
        text: "Start Bot"
        pos_hint: {'center_x': .5, 'center_y': .25}
        size_hint: (None, None)
        size: self.texture_size
        padding: (dp(5),dp(5))
        on_release:
            app.startBot()

<SecondWindow>:
    name: 'second'
    Button:
        text: "Give Task"
        size_hint: (.2, .1)
        pos_hint: {'center_x': .2, 'center_y': .7}
        on_release:
            app.root.current = 'third'

    Button:
        text: "\u0394 Login"
        size_hint: (.2, .1)
        pos_hint: {'center_x': .5, 'center_y': .7}
        on_release:
            app.root.current = 'fourth'

    Button:
        text: "kill Bot"
        size_hint: (.2, .1)
        pos_hint: {'center_x': .8, 'center_y': .7}
        on_release:
            app.killBot()
    
    Button:
        text: "Back"
        size_hint: (.1, .1)
        pos_hint: {'center_x': .05, 'center_y': .95}
        on_release:
            app.root.current = "main"

<ThirdWindow>:
    name: 'third' 

    Label:
        text: "Select a task:"
        pos_hint: {'center_x': .25, 'center_y': .95}
        size_hint: (.3, .6)

    ScrollView:
        pos_hint: {'center_x': .25, 'center_y': .6}
        size_hint: (.3, .6)
        GridLayout:
            id: taskList
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: (1, 1)
            cols: 1
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height

    Label:
        text: "Selected tasks:"
        pos_hint: {'center_x': .75, 'center_y': .95}
        size_hint: (.3, .6)

    ScrollView:
        pos_hint: {'center_x': .75, 'center_y': .6}
        size_hint: (.3, .6)
        GridLayout:
            id: selectedTasks
            pos_hint: {'center_x': .5, 'center_y': .5}
            size_hint: (1, 1)
            cols: 1
            canvas.before:
                Color:
                    rgba: .5, .5, .5, 1
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height

    Button:
        text: "Cancel"
        pos_hint: {'center_x': .25, 'center_y': .2}
        size_hint: (.2, .1)
        on_press:
            root.cancelButton()

    Button:
        text: "Confirm"
        pos_hint: {'center_x': .75, 'center_y': .2}
        size_hint: (.2, .1)
        on_press:
            root.confirmButton()

    TextInput:
        id: params
        pos_hint: {'center_x': .75, 'center_y': .1}
        size_hint: (.2, .05)

<FourthWindow>:
    name: 'fourth'

    Label:
        text: 'Username:'
        size_hint: (.2, .1)
        pos_hint: {'center_x': .35, 'center_y': .8}

    TextInput:
        id: username
        size_hint: (.2, .1)
        pos_hint: {'center_x': .35, 'center_y': .7}


    Label:
        text: 'Password:'
        size_hint: (.2, .1)
        pos_hint: {'center_x': .65, 'center_y': .8}

    TextInput:
        id: password
        size_hint: (.2, .1)
        pos_hint: {'center_x': .65, 'center_y': .7}

    TextInput:
        id: world
        size_hint: (.2, .1)
        pos_hint: {'center_x': .5, 'center_y': .35}

    
    Button:
        text: "Cancel"
        size_hint: (.1, .1)
        pos_hint: {'center_x': .43, 'center_y': .55}
        on_release:
            root.cancelButton()

    Button:
        text: "Confirm"
        size_hint: (.1, .1)
        pos_hint: {'center_x': .57, 'center_y': .55}
        on_release:
            root.confirmButton()

